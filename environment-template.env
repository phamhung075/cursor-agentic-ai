# 🧠 Self-Improvement Agent v2.0 - Environment Configuration Template
# Copy this file to .env and replace placeholder values with your actual API keys

# ==================================================
# 🌐 Pinecone Configuration (for Agent Memory)
# ==================================================
# Get your API key from: https://app.pinecone.io/
# 1. Sign up at Pinecone
# 2. Create a new index named 'agentic-framework-memory'
# 3. Copy your API key below
PINECONE_API_KEY=your_pinecone_api_key_here

# Pinecone index name (must match what you created in dashboard)
PINECONE_INDEX_NAME=agentic-framework-memory

# ==================================================
# 🤖 OpenAI Configuration (for Embeddings)
# ==================================================
# Get your API key from: https://platform.openai.com/
# Required for generating semantic embeddings for memory search
OPENAI_API_KEY=your_openai_api_key_here

# ==================================================
# 📁 Agent Configuration
# ==================================================
# Current project name (optional, can be set via CLI)
PROJECT_NAME=my-project

# Enable/disable agent features
AGENT_MEMORY_ENABLED=true
AGENT_FILESTORE_ENABLED=true

# ==================================================
# 🧠 Memory System Settings
# ==================================================
# How long to keep memories (in days)
MEMORY_RETENTION_DAYS=90

# Maximum number of local memories to cache
MAX_LOCAL_MEMORIES=1000

# Enable Pinecone integration (fallback to local if false)
ENABLE_PINECONE=true

# Enable OpenAI embeddings (fallback to hash-based if false)
ENABLE_OPENAI=true

# ==================================================
# 🔧 Development Settings
# ==================================================
# Debug mode for detailed logging
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Environment (development, production, test)
NODE_ENV=development

# ==================================================
# 🛡️ Security Settings
# ==================================================
# Rate limiting for API calls (calls per minute)
API_RATE_LIMIT=100

# Maximum file size for analysis (in MB)
MAX_FILE_SIZE=10

# ==================================================
# 📊 Analytics & Learning
# ==================================================
# Enable user feedback tracking
TRACK_USER_FEEDBACK=true

# Enable pattern learning
ENABLE_PATTERN_LEARNING=true

# Enable context-aware memory
ENABLE_CONTEXT_MEMORY=true

# ==================================================
# 🗂️ File Storage Settings
# ==================================================
# Agent store root directory (relative to project)
AGENT_STORE_ROOT=./agents/_store

# Auto-migrate existing files on startup
AUTO_MIGRATE_FILES=false

# ==================================================
# 🎯 Performance Settings
# ==================================================
# Maximum concurrent file analyses
MAX_CONCURRENT_ANALYSES=3

# Memory cleanup interval (in hours)
MEMORY_CLEANUP_INTERVAL=24

# Cache refresh interval (in minutes)
CACHE_REFRESH_INTERVAL=60

# ==================================================
# 🚀 Optional Integrations
# ==================================================
# Slack webhook for notifications (optional)
# SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Discord webhook for notifications (optional)
# DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Custom API endpoint for additional integrations (optional)
# CUSTOM_API_ENDPOINT=your_custom_api_endpoint_here

# ==================================================
# 📱 UI/CLI Settings
# ==================================================
# Enable colored output in CLI
ENABLE_COLORS=true

# CLI prompt character
CLI_PROMPT=🤖 >

# Show detailed progress indicators
SHOW_PROGRESS=true

# ==================================================
# 🔄 Setup Instructions
# ==================================================
# 1. Copy this file: cp environment-template.env .env
# 2. Replace 'your_pinecone_api_key_here' with your actual Pinecone API key
# 3. Replace 'your_openai_api_key_here' with your actual OpenAI API key
# 4. Adjust other settings as needed
# 5. Never commit the .env file to git (it's already in .gitignore) 
