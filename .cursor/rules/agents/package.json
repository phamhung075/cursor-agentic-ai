{
  "name": "aai-system-enhanced",
  "version": "2.0.0",
  "description": "Premier AI-assisted development platform for Cursor IDE with intelligent task management, automation, and MCP server capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts' 'scripts/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'tests/**/*.ts' 'scripts/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' 'scripts/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts' 'scripts/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:generate": "tsx scripts/generate-migrations.ts",
    "db:import-tasks": "tsx scripts/import-tasks.ts",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "precommit": "lint-staged",
    "inspect:api": "node --inspect-brk dist/index.js",
    "inspect:mcp": "AAI_MODE=mcp node --inspect-brk dist/index.js",
    "sse": "tsx src/api/SSEServer.ts",
    "sse:test": "node scripts/test-sse-server.js",
    "sse:kill": "pkill -f 'node.*test-sse-server.js' || true",
    "sse:status": "lsof -i :3233 | grep LISTEN || echo 'No SSE server running on port 3233'",
    "sse:auto-test": "npm run sse:test",
    "mcp:restart": "npm run sse:kill && npm run sse",
    "mcp:hello": "node scripts/hello-world-mcp.js",
    "mcp:server": "node scripts/hello-world-mcp.js",
    "db:deploy-supabase": "tsx scripts/deploy-to-supabase.ts",
    "cursor-mcp": "node scripts/mcp-cursor-launcher.js"
  },
  "keywords": [
    "ai",
    "task-management",
    "automation",
    "cursor-ide",
    "mcp",
    "model-context-protocol",
    "typescript",
    "intelligent-system"
  ],
  "author": "AAI System Enhanced Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@pinecone-database/pinecone": "^1.1.2",
    "@supabase/supabase-js": "^2.49.8",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^9.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "eventsource": "^4.0.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "openai": "^4.20.1",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/aai-system-enhanced.git"
  }
}
