{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "AAI: Start Agent",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "AAI:start"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "AAI: Analyze Code",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "AAI:analyze"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "AAI: Update Cursor Summaries",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "cursor:update-summaries"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "AAI: Start File Watcher",
      "type": "shell",
      "command": "node",
      "args": [
        "agents/cursor-integration/file-watcher.js"
      ],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "AAI: Memory Stats",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "AAI:memory-stats"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}