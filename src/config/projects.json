{
  "defaultBranch": "main",
  "buildTimeout": 300000,
  "projectCategories": [
    "web-app",
    "api",
    "cli-tool",
    "library",
    "mobile-app",
    "desktop-app",
    "documentation",
    "prototype",
    "experiment"
  ],
  "buildTargets": {
    "node": {
      "packageManager": "npm",
      "installCommand": "npm install",
      "buildCommand": "npm run build",
      "testCommand": "npm test"
    },
    "python": {
      "packageManager": "pip",
      "installCommand": "pip install -r requirements.txt",
      "buildCommand": "python setup.py build",
      "testCommand": "python -m pytest"
    },
    "rust": {
      "packageManager": "cargo",
      "installCommand": "cargo fetch",
      "buildCommand": "cargo build",
      "testCommand": "cargo test"
    },
    "go": {
      "packageManager": "go",
      "installCommand": "go mod download",
      "buildCommand": "go build",
      "testCommand": "go test"
    }
  },
  "integrationSettings": {
    "autoUpdate": false,
    "buildOnAdd": true,
    "generateDocs": true,
    "validateGitRepo": true
  },
  "excludePatterns": [
    "node_modules",
    ".git",
    "dist",
    "build",
    "target",
    "__pycache__",
    ".pytest_cache",
    ".DS_Store"
  ]
} 